{
    "openapi": "3.0.0",
    "info": {
        "title": "North Scheduling Socrates",
        "description": "A API N.S.S. (North Scheduling Socrates) tem como seu objetivo possibilitar o agendamento de aulas de forma dinâmica, onde um instrutor pode se cadastrar para mestrar aulas, e o aluno pode agendar uma aula com o instrutor.",
        "version": "1.0.0",
        "contact": {
            "name": "API Support",
            "email": "asttryd.pacheco.pb@compass.com.br"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/instructor/register": {
            "post": {
                "summary": "Cadastro de instrutor",
                "description": "Essa rota é responsável por cadastrar um instrutor novo",
                "tags": ["Instructor"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Instructor"
                            }
                        }
                    }
                }
            }
        }
        
    },
    "components": {
        "schemas": {
            "Instructor": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "specialties": {
                        "type": "string"
                    },
                    "formOfService": {
                        "type": "string"
                    },
                    "classStartTime": {
                        "type": "date"
                    },
                    "classTime": {
                        "type": "number"
                    },
                    "classLocation": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Student": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "schooling": {
                        "type": "string"
                    }
                }
            }
        }
    }
}